-- Create Region table
CREATE TABLE Region (
  id INTEGER PRIMARY KEY,
  name TEXT NOT NULL
);

-- Create Country table
CREATE TABLE Country (
  id INTEGER PRIMARY KEY,
  name TEXT NOT NULL,
  countryCode TEXT NOT NULL,
  countryName TEXT NOT NULL,
  countryFlag TEXT NOT NULL,
  regionId INTEGER,
  FOREIGN KEY(regionId) REFERENCES Region(id)
);

